{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "build",
		"declaration": true,
		"sourceMap": false,
		"newLine": "LF",
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": [
		"build"
	]
}
